<h1> Links </h1>

<ul id='links'>
  <% @links.each do |link| %>
    <li>
      Title: <%= link.title %>
      URL:   <%= link.url   %>
      Tags: <%=  link.tags.map(&:name)  %>
    </li>
  <% end %>
</ul>
<form action="/links/tags">
  <input type='text' name='filter'>
  <br>
  <input type="submit" value="filter by this tag">
</form>
